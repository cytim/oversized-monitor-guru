{
  "name": "Oversized Monitor Guru (OMG)",
  "description": "Transform your large monitor into a professional screen sharing experience!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/omg.default.16x16.png",
      "48": "icons/omg.default.48x48.png",
      "128": "icons/omg.default.128x128.png"
    }
  },
  "icons": {
    "16": "icons/omg.default.16x16.png",
    "48": "icons/omg.default.48x48.png",
    "128": "icons/omg.default.128x128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
